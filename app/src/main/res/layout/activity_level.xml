<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseViewID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".levelActivity">

    <ImageView
        android:id="@+id/floorID"
        android:background="@drawable/test_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/platform1ID"
        android:background="@drawable/test_platform"
        android:layout_width="2000dp"
        android:layout_height="500dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/characterID"
            android:background="@drawable/default_static"
            android:layout_width="100dp"
            android:layout_height="150dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>